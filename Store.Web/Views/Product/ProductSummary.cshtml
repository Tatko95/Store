@model Product
@using Store.Model.Entities.dbml;

<script type="text/javascript">
    function AddInCart(id) {
        $.ajax({
            url: "/Product/InsertInCart",
            type: "post",
            data: { productId: id },
            success: function (result) {
                $('#divCart').html(result); 
            }
        });
    }
</script>

