@model Store.Model.Entities.Helpers.Cart
@{ 
    Layout = null;
}
<div id="cart">
    <span class="caption">
        <b>Ваш кошик:</b>
        @Model.Lines.Sum(x => x.Quantity) шт.,
        @Model.ComputeTotalValue().ToString() грн.
    </span>
    @Html.ActionLink("Оформити замовлення", "Index", "Order")
</div>
